package com.Bridgelabz.Junit;

import java.util.Scanner;

public class Temperature {

		public static void main(String[] args) {
			Scanner s=new Scanner(System.in);
			System.out.println("Enter the temperature in celsius or farenheit:");
			String a=s.next();
			
			//String 
			switch(a) {
			case "ce":
				System.out.println("Enter the Celsius degree:");
				double c=s.nextDouble();
				celsius(c);
				break;
			case "fa":
				System.out.println("Enter the farenheit degree:");
				double f=s.nextDouble();
				fahren(f);
				break;
			default:
				System.out.println("Invalid option");
			}
			
			
		}

		private static void fahren(double f) {
			//Fahrenheit to Celsius: (°F − 32) x 5/9 = °C 
					double e=(f-32)*5/9;
					System.out.println("Conversion of F to C is:"+e+"degree.");

			
		}

		private static void celsius(double c) {
			
			//Celsius to Fahrenheit: (°C × 9/5) + 32 = °F// 37°C × 9/5) + 32 = 98.6°F

					double b=9 * (c / 5) + 32;		
					System.out.println("Conversion of C to F is:"+b+"degree.");

			
		}
	}
}
